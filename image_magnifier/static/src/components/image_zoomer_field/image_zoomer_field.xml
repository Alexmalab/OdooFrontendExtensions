<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.ImageZoomerField" t-inherit="web.ImageField" t-inherit-mode="primary">
        <xpath expr="//div[hasclass('position-relative')]" position="attributes">
            <attribute name="class" add="img-zoomer-box" separator=" "/>
            <attribute name="t-ref" add="img-zoomer-box" separator=" "/>
        </xpath>

        <xpath expr="//div[hasclass('position-relative')]/img" position="attributes">
            <attribute name="id" add="img-1" separator=" "/>
        </xpath>

        <xpath expr="//div[hasclass('position-relative')]/img" position="after">
             <div id="img-2"/>
        </xpath>

        <xpath expr="//button[hasclass('o_select_file_button')]" position="attributes">
            <attribute name="t-on-mousemove" add="onMouseMove" separator=" "/>
            <attribute name="t-on-mouseleave" add="onMouseLeave" separator=" "/>
        </xpath>
        <xpath expr="//button[hasclass('o_clear_file_button')]" position="attributes">
            <attribute name="t-on-mousemove" add="onMouseMove" separator=" "/>
            <attribute name="t-on-mouseleave" add="onMouseLeave" separator=" "/>
        </xpath>

    </t>

</templates>
